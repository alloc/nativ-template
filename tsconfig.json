{
  "extends": "expo/tsconfig.base.json",
  "include": ["src", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*", "./assets/*"]
    },
    "strict": true,
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
