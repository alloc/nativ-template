{
  "extends": "expo/tsconfig.base.json",
  "include": [".", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/core/*", "./assets/*"],
      "~/db/*": ["./src/db/*", "./drizzle/*"]
    },
    "strict": true,
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
